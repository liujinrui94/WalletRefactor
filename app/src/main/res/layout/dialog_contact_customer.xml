<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_background_5"
    android:minHeight="150dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_contact_customer_text_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1.3"
            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/dialog_contact_customer_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_user_upgrade_wechat" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_contact_customer_title_tv"
                style="@style/text_black_19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="bottom"
                android:text="@string/call_hot_line" />

            <TextView
                android:id="@+id/dialog_contact_customer_detail_tv"
                style="@style/text_black_gray_18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/transparent"
                android:text="@string/hot_line" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_contact_customer_ll_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_contact_customer_service_scan"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_contact_customer_negate_tv"
            style="@style/text_white_15dp"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/selector_button_gray_3"
            android:text="@string/cancel" />


        <TextView
            android:id="@+id/dialog_contact_customer_positive_tv"
            style="@style/text_white_15dp"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_button_theme_3"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="@string/success" />
    </LinearLayout>

</LinearLayout>