<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chengxiang.pay.activity.SelectBranchActivity">

    <include layout="@layout/action_bar" />

    <EditText
        android:id="@+id/branch_search_et"
        style="@style/text_black_15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_white_background_5"
        android:drawableLeft="@mipmap/ic_search"
        android:drawablePadding="10dp"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="8dp" />

    <ListView
        android:id="@+id/branch_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

    <TextView
        android:id="@+id/branch_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data"
        style="@style/text_gray_24dp"
        android:visibility="gone" />
</LinearLayout>
