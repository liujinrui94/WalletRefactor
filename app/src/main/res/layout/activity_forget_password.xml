<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chengxiang.pay.activity.ForgetPasswordActivity">

    <include layout="@layout/action_bar" />

    <TextView
        style="@style/text_theme_23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_login_logo"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp"
        android:paddingTop="20dp"
        android:text="@string/app_name" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_register_phone" />

        <com.chengxiang.pay.framework.custom.CustomEditText
            android:id="@+id/forget_phone_cet"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:hint="@string/input_your_mobile_phone_number"
            android:inputType="phone"
            android:textSize="13dp"
            app:editType="numberPhone"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:background="@color/colorDividers" />

        <TextView
            android:id="@+id/forget_get_verified_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/get_identifying_code"
            android:textColor="#0064C6"
            android:textSize="13dp"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/colorDividers" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_register_message_code" />

        <EditText
            android:id="@+id/forget_message_code_et"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:hint="@string/enter_sms_verification_code"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textSize="13dp"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/colorDividers" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_register_password" />

        <EditText
            android:id="@+id/forget_password_et"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/input_password"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="13dp"
            tools:ignore="SpUsage" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/colorDividers" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_register_password" />

        <EditText
            android:id="@+id/forget_password_again_et"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/input_password_again"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="13dp"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/colorDividers" />

    <Button
        android:id="@+id/forget_make_sure_btn"
        style="@style/text_white_18dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_button_theme_25"
        android:text="@string/success" />

</LinearLayout>
