<?xml version="1.0" encoding="utf-8"?>
<com.chengxiang.pay.framework.custom.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_bank_card_detail_ll"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_margin="10dp"
            android:background="@mipmap/ic_bank_boc"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grid_product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:text="@string/china_bank"
                style="@style/text_white_18dp" />

            <TextView
                android:id="@+id/bank_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="5dp"
                android:text="@string/bank_card_num"
                style="@style/text_white_15dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_bank_card_delete_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@mipmap/ic_change_bank_delete" />
    </LinearLayout>

</com.chengxiang.pay.framework.custom.SwipeMenuLayout>