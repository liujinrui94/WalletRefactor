<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chengxiang.pay.activity.GatheringResultActivity">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_white_background_stroke_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gathering_amount_tv"
            style="@style/text_black_15dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDividers"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/gathering_time_tv"
            style="@style/text_black_15dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
