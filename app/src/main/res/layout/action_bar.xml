<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/themeColorDark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/action_bar_title_tv"
        style="@style/text_white_20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/action_bar_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="btnFinish"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@mipmap/ic_arrow_back_white" />

    <com.chengxiang.pay.framework.custom.MessageBarView
        android:id="@+id/action_bar_right_mbv"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/action_bar_right_tv"
        style="@style/text_white_18dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="@string/register"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/action_bar_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:src="@mipmap/ic_action_bar_add"
        android:visibility="gone" />

</RelativeLayout>