<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chengxiang.pay.activity.ContactCustomerServiceActivity">

    <include
        android:id="@+id/contact_customer_action_ll"
        layout="@layout/action_bar" />

    <ImageView
        android:id="@+id/contact_customer_top_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/contact_customer_action_ll"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_contact_customer_service_top" />

    <LinearLayout
        android:id="@+id/contact_customer_phone_wechat_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_customer_top_iv"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contact_customer_phone_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:scaleType="fitEnd"
            android:src="@mipmap/ic_contact_customer_service_phone" />

        <ImageView
            android:id="@+id/contact_customer_wechat_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:scaleType="fitStart"
            android:src="@mipmap/ic_contact_customer_service_wechat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_customer_phone_wechat_ll"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contact_customer_qq_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:scaleType="fitEnd"
            android:src="@mipmap/ic_contact_customer_service_qq" />

        <ImageView
            android:id="@+id/contact_customer_business_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:scaleType="fitStart"
            android:src="@mipmap/ic_contact_customer_service_business" />
    </LinearLayout>
</RelativeLayout>
