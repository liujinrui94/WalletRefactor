<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chengxiang.pay.activity.UserUpgradeModeActivity">

    <include layout="@layout/action_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/user_upgrade_share_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/ic_user_upgrade_share" />

            <TextView
                style="@style/text_black_15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:layout_weight="0.84"
                android:gravity="center_vertical"
                android:text="@string/want_share" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>
    </FrameLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/user_upgrade_wechat_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="21dp"
                android:src="@mipmap/ic_user_upgrade_wechat" />

            <TextView
                android:id="@+id/user_upgrade_wechat_detail_tv"
                style="@style/text_black_15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/staff_upgrade_manager" />

            <TextView
                android:id="@+id/user_upgrade_wechat_amount_tv"
                style="@style/text_black_15dp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="@string/rmb_30000" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="56dp"
        android:background="@color/colorDividers" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/user_upgrade_ali_pay_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="21dp"
                android:src="@mipmap/ic_user_upgrade_ali_pay" />

            <TextView
                android:id="@+id/user_upgrade_ali_pay_detail_tv"
                style="@style/text_black_15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/staff_upgrade_manager" />

            <TextView
                android:id="@+id/user_upgrade_ali_pay_amount_tv"
                style="@style/text_black_15dp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="@string/rmb_30000" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
