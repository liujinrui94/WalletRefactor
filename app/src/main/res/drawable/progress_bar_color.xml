<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#efefef"
                android:centerY="0.75"
                android:endColor="#a3a3a3"
                android:startColor="#c7c7c7" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/themeColor"
                    android:centerY="0.75"
                    android:endColor="@color/themeColor"
                    android:startColor="@color/themeColor" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/themeColorDark"
                    android:centerY="0.75"
                    android:endColor="@color/themeColorDark"
                    android:startColor="@color/themeColorDark" />
            </shape>
        </clip>
    </item>

</layer-list>