<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/themeColorDark</item>
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden</item>
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
    </style>

    <!--Activity Animation-->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_into_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_into_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out_to_right</item>
    </style>

    <!--ShareActivity From Bottom-->
    <style name="ShareActivityFromBottom" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:activityOpenEnterAnimation">@anim/into_from_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_bottom</item>
    </style>
    <!--SplashActivity Animation-->
    <style name="SplashActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--common dialog theme-->
    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--progress dialog theme-->
    <style name="BaseProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/themeColorDark</item>
    </style>

    <!-- union popupWindow theme -->
    <style name="unionPopupWindow">
        <item name="android:windowEnterAnimation">@anim/popup_window_open</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/popup_window_close</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!-- 收益主页的tab样式 -->
    <style name="MyTabButton">
        <!-- 水平居中 -->
        <item name="android:gravity">center</item>
        <!-- 字体样式 -->
        <item name="android:textAppearance">@style/tab_home_font_bg</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@mipmap/ic_profit_bottom_bg</item>
    </style>
    <!-- 程序主页的tab字体样式 -->
    <style name="tab_home_font_bg">
        <!-- 字体颜色 -->
        <item name="android:textColor">@drawable/selector_tab_menu_text_color</item>
        <!-- 字体加粗 -->
        <item name="android:textStyle">normal</item>
        <!-- 字体大小 -->
        <item name="android:textSize">14.0sp</item>
        <!-- 文字过长的省略显示 -->
        <item name="android:ellipsize">marquee</item>
        <!-- 当文本不能正常现实的时候后面用..表示 -->
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

